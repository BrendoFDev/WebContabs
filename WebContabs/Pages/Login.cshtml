@page
@model LoginModel
@{
  
}
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewData["Login"]</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/Login.css" />
    </head>

    <body>
    <div class="form-group" >
        <div class="form-group" id="box_content">
            <div class="form-text">
                <h1>MyContabs</h1>
            </div>
                <form method="post">
                    <div class="form-group">
                    <div class="form-group row mb-3" id="row">
                            <label for="email" class="row-form-label row-sm-1">Seu Email</label>
                            <div class="col-sm m-2">
                                <input class="form-control" type="email" id="email" placeholder="email" required/>
                            </div>
                        </div>
                        <div class="form-group row mb-3" id="row">
                            <label for="password" class="row-form-label row-sm-1">Sua Senha</label>
                            <div class="col-sm m-2">
                                <input class="form-control col-sm-2" type="password" id="password" placeholder="Senha"  required/>
                            </div>
                        </div>
                    </div>
                    <div class="box_buttons">
                        <div>
                            <a href="#">Esqueceu a sua senha?</a>
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit">Entrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
